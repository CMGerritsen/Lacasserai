{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<style>
    .form_widht {
        width: 300px;
        margin-left: 40%;
    }
</style>

<body class="text-center">
<form style="margin-top: 7%;" class="form-signin" action="{{ path("fos_user_security_check") }}" method="post">
    <h1 class="h3 mb-3 font-weight-normal">La Casserai sign in</h1>

    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <label class="sr-only" for="username">{{ 'security.login.username'|trans }}</label>
    <input placeholder="{{ 'security.login.username'|trans }}" class="form-control form_widht" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />

    <label class="sr-only" for="password">{{ 'security.login.password'|trans }}</label>
    <input placeholder="{{ 'security.login.password'|trans }}" class="form-control form_widht" type="password" id="password" name="_password" required="required" autocomplete="current-password" />

    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>

    <br>
    <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
</form>

<a href="/register">Register</a>
</body>