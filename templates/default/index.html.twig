{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}

{% block body %}
    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <h1 class="display-4">Hotel La Casserai</h1>
        {#        <p class="lead">Quickly build an effective pricing table for your potential customers with this Bootstrap example. Itâ€™s built with default Bootstrap components and utilities with little customization.</p>#}
    </div>

    {% for room in room %}
        <div class="container">
        {% if room.available == 1 %}
            <div class="card-deck mb-3 text-center">
                <div class="card mb-4 shadow-sm">
                    <div class="card-header">
                        <h4 class="my-0 font-weight-normal">{{ room.name }}</h4>
                    </div>
                    <div class="card-body">
                        <img src={{ vich_uploader_asset(room, 'imageFile') }} width="500px">
                        <h1 class="card-title pricing-card-title">&euro;{{ room.price }}<small>/night</small></h1>
                        <ul class="list-unstyled mt-3 mb-4">
                            <li>Bedden: {{ room.bed }}</li>
                            <li>{{ room.description }}</li>
                        </ul>
                        <a style="text-decoration: none" href="/bookroom/{{ room.id }}">
                            <button type="button" class="btn btn-lg btn-block btn-outline-primary">Booken</button>
                        </a>
                    </div>
                </div>
            </div>
        {% endif %}
    {% endfor %}

    <footer class="pt-4 my-md-5 pt-md-5 border-top">
        <div class="row">
            <div class="col-12 col-md">
                <img class="mb-2" src="/docs/4.3/assets/brand/bootstrap-solid.svg" alt="" width="24" height="24">
                <small class="d-block mb-3 text-muted">&copy; 2017-2019</small>
